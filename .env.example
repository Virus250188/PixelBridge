# ======================================
# PixelBridge Configuration
# ======================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
# Set to absolute path or relative to backend directory
# In Docker: /app/database/retroarch.db (mounted volume)
# Local dev: ./database/retroarch.db
DATABASE_PATH=./database/retroarch.db

# Storage Configuration
# In Docker: /app/storage (mounted volume)
# Local dev: ./storage
STORAGE_PATH=./storage
ROMS_PATH=./storage/roms
COVERS_PATH=./storage/covers
METADATA_PATH=./storage/metadata

# RetroArch Apple TV Configuration
# Default IP - can be changed via Settings UI
RETROARCH_IP=192.168.6.125
RETROARCH_PORT=80

# IGDB API Configuration (Metadata fetching)
# Get credentials: https://api-docs.igdb.com/#account-creation
# 1. Create Twitch Developer account: https://dev.twitch.tv/
# 2. Register application
# 3. Copy Client ID and generate Client Secret
IGDB_CLIENT_ID=your_twitch_client_id_here
IGDB_ACCESS_TOKEN=your_twitch_access_token_here

# ScreenScraper API (Fallback for metadata)
# Optional - leave empty if not using
# Register at: https://www.screenscraper.fr/
SCREENSCRAPER_DEV_ID=
SCREENSCRAPER_DEV_PASSWORD=
SCREENSCRAPER_USERNAME=
SCREENSCRAPER_PASSWORD=

# File Upload Limits
MAX_FILE_SIZE=4294967296  # 4GB in bytes
ALLOWED_EXTENSIONS=.nes,.snes,.sfc,.gb,.gbc,.gba,.iso,.bin,.cue,.smd,.md,.gen,.gg,.cdi,.gdi,.zip,.7z

# CORS Configuration
# Frontend URL for CORS
CORS_ORIGIN=http://localhost:5173

# ======================================
# Docker-specific Configuration
# ======================================
# When running in Docker, these paths are handled by volumes
# No need to change these for Docker deployment
